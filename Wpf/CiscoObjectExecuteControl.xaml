<UserControl x:Class="Cliver.CisteraNotification.CiscoObjectExecuteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cliver.CisteraNotification"
             mc:Ignorable="d">
    <Border>
        <Grid Name="grid" >
            <StackPanel>
                <RichTextBox Name="box" Height="auto" MinWidth="500" HorizontalAlignment="Stretch">
                    <FlowDocument PagePadding="0">
                        <Paragraph Padding="0">                           
                            <Run Name="title" FontWeight="Bold">The said Eliza, John, and Georgiana etc. etc.
                    The said Eliza, John, and Georgiana etc. etc.
                            </Run>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
                <StackPanel FlowDirection="LeftToRight" Orientation="Horizontal"  >
                    <Button Name="file" Content="File" Height="24"  Width="auto"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
